{
	"name": "note",
	"version": "1.0.0",
	"main": "dist/app.js",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development nodemon src/server.ts",
		"start": "cross-env NODE_ENV=production node dist/app.js",
		"test": "cross-env NODE_ENV=test node --test tests/note_api.test.ts node --test tests/user_api.test.ts",
		"build": "tsc",
		"testdev": "cross-env NODE_ENV=test npx nodemon src/server.ts",
		"prod": "npm run build && npm start",
		"build:ui": "rm -rf dist && cd ../frontend && npm run build && cp -r dist ../backend",
		"deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push",
		"lint": "eslint .",
		"start:test": "cross-env NODE_ENV=test node --watch index.js"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.10.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.46.3",
		"@typescript-eslint/parser": "^8.46.3",
		"eslint": "^9.39.1",
		"nodemon": "^3.1.10",
		"supertest": "^7.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.7"
	},
	"dependencies": {
		"@stylistic/eslint-plugin-js": "^4.4.1",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.5",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.19.3",
		"pg": "^8.16.3",
		"sequelize": "^6.37.7"
	}
}
